{
  "name": "asset-backend",
  "version": "1.0.0",
  "license": "Proprietary",
  "scripts": {
    "start": "node -r module-alias/register build/asset-backend/src/index.js",
    "start:develop": "NODE_ENV=staging LOG_LEVEL=debug npm run start -- -r source-map-support/register",
    "start:staging": "NODE_ENV=staging LOG_LEVEL=info npm run start",
    "start:production": "NODE_ENV=production LOG_LEVEL=info npm run start",
    "test": "NODE_ENV=testing jest -c .jest-unit.json --watchAll",
    "test:debug": "NODE_ENV=testing node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest -c .jest-unit.json --runInBand",
    "test:once": "NODE_ENV=testing jest -c .jest-unit.json --coverage",
    "posttest:once": "npm run check",
    "e2e": "NODE_ENV=e2e jest -c .jest-e2e.json --watchAll",
    "e2e:debug": "NODE_ENV=e2e node --inspect-brk=0.0.0.0:9229 -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest -c .jest-e2e.json --runInBand",
    "e2e:once": "NODE_ENV=e2e jest -c .jest-e2e.json",
    "dev": "npm run clean && NODE_ENV=development LOG_LEVEL=debug tsc-watch --preserveWatchOutput -w --noEmitOnError false --onSuccess \"node -r module-alias/register -r source-map-support/register ./build/asset-backend/src/index.js\"",
    "dev:debug": "npm run clean && NODE_ENV=development LOG_LEVEL=debug tsc-watch --preserveWatchOutput -w --noEmitOnError false --onSuccess \"node -r module-alias/register -r source-map-support/register --inspect-brk=0.0.0.0:9222 ./build/asset-backend/src/index.js\"",
    "clean": "rimraf build/",
    "compile": "npm run clean && echo Compiling... && tsc -p .",
    "compile:develop": "npm run compile",
    "compile:staging": "npm run clean && echo Compiling... && tsc -p tsconfig.build.json",
    "compile:production": "npm run clean && echo Compiling... && tsc -p tsconfig.build.json",
    "check": "eslint -c .eslintrc.fix.json '{src,test}/**/*.{ts,js}'",
    "fix": "eslint -c .eslintrc.fix.json --fix '{src,test}/**/*.{ts,js}'",
    "migration:create": "ts-node --require module-alias/register ../node_modules/typeorm/cli.js migration:create -d ./src/migrations -n $1",
    "migration:generate": "ts-node --require module-alias/register ../node_modules/typeorm/cli.js migration:generate -d ./src/migrations -n $1",
    "migration:run": "ts-node --require module-alias/register ../node_modules/typeorm/cli.js migration:run",
    "precommit": "lint-staged"
  },
  "_moduleAliases": {
    "src": "build/src/",
    "shared/common": "build/shared/common/src/",
    "shared/backend": "build/shared/backend/src/",
    "shared/nestjs": "build/shared/nestjs/src/"
  },
  "devDependencies": {
    "@elunic/ecs-prettier": "^0.2.1",
    "@elunic/ecs-tsconfig": "^0.1.1",
    "@elunic/eslint-config-ecs": "^0.1.10",
    "@types/eslint": "^7.2.6",
    "@types/jest": "^25.2.3",
    "@types/module-alias": "^2.0.0",
    "@types/node": "^12.12.47",
    "@types/prettier": "^1.19.1",
    "@types/reflect-metadata": "^0.1.0",
    "@types/sinon": "^7.5.2",
    "@types/supertest": "^2.0.9",
    "@types/tsc-watch": "^4.2.0",
    "eslint": "^7.19.0",
    "jest": "^26.6.3",
    "jest-extended": "^0.11.5",
    "jest-html-reporters": "^2.1.0",
    "jest-junit": "^10.0.0",
    "lint-staged": "^10.5.4",
    "prettier": "^2.2.1",
    "sinon": "^7.5.0",
    "supertest": "^4.0.2",
    "ts-jest": "^26.4.4",
    "ts-node": "^9.0.0",
    "tsc-watch": "^4.2.9",
    "tsconfig-paths": "^3.9.0",
    "typescript": "~4.0.5"
  },
  "dependencies": {
    "module-alias": "^2.2.2",
    "reflect-metadata": "^0.1.13",
    "source-map-support": "^0.5.19"
  }
}
